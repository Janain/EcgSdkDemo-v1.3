<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mhealth365.demander.EcgSdkUSBDemo" >

    <TextView
        android:id="@+id/editOpenId_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="openid：" />

    <EditText
        android:id="@+id/editOpenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【以下是测试厂商授权信息，设置后下次启动生效】" />

    <TextView
        android:id="@+id/editAppId_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="appid：APP ID" />

    <EditText
        android:id="@+id/editAppId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/editThirdPartyId_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThirdPartyId：公司id" />

    <EditText
        android:id="@+id/editThirdPartyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/editPkgName_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PkgName：（包名设置无效，sdk会自动获取）" />

    <EditText
        android:id="@+id/editPkgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/set_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设置" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="恢复" />
    </LinearLayout>

</LinearLayout>